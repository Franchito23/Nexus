extends ../layout/index

block contenido 
    div.mt-3.mx-auto.max-w-xl
        div.bg-zinc-300.py-6.px-4.shadow-xl.rounded-md
            h2.text-center.text-5xl.text-violet-900.py-10.font-bold= page
            div.flex.justify-center
                img.h-full.max-h-80(src="/img/NexusFull.png", alt="Nexus Logo")
            form.space-y-5
                div
                    label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for="email") Correo electrónico
                        i.fa-solid.fa-user 
                    input#email.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(type="text", name="email" placeholder="Ingresa tu correo electrónico")
                div.flex.justify-center
                    button.bg-violet-900.text-zinc-300.text-lg.font-semibold.px-4.py-2.m-2.rounded-lg.transition-transform.transform-gpu(type="submit") Enviar indicaciones
                div.flex.justify-center
                    a(href="/auth/login") Iniciar sesión
